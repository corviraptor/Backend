{
    "type": "origins:multiple",
    "start": {
        "type": "origins:active_self",
        "entity_action": { 
            "type": "origins:execute_command",
            "command": "function dredgecombat:comboblade/begin_draw"
        },
        "key": {
            "key": "key.use"
        },
        "tick_rate": 4,
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:equipped_item",
                    "equipment_slot": "mainhand",
                    "item_condition": {
                        "type": "origins:nbt",
                        "nbt": "{ComboBlade_Axe:1b}"
                    }
                },
                {
                    "type": "apugli:key_pressed",
                    "key": {
                        "key": "key.sneak",
                        "continuous": true
                    }
                }
            ]
        }
    },
    "timer": {
        "type":"origins:action_over_time",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "scoreboard players operation @s ComboBladeDrawTime -= one Constants"
        },
        "condition": {
            "type":"origins:scoreboard",
            "objective": "ComboBladeDrawTime",
            "compare_to": 0,
            "comparison": "!="
        },
        "interval": 2,
        "falling_action": {
            "type":"origins:if_else",
            "condition": {
                "type": "origins:equipped_item",
                "equipment_slot": "mainhand",
                "item_condition": {
                    "type": "origins:nbt",
                    "nbt": "{ComboBlade_Axe:1b}"
                }
            },
            "if_action": {
                "type": "origins:execute_command",
                "command": "function dredgecombat:comboblade/end_draw"
            }
        }
    }
}